{
  "title": "Orders Service - Golden Path Dashboard",
  "tags": ["orders-service", "golden-path"],
  "timezone": "browser",
  "panels": [
    {
      "type": "graph",
      "title": "HTTP 5xx Rate",
      "targets": [
        {
          "expr": "rate(http_server_requests_seconds_count{status=~\"5..\",application=\"orders-service\"}[5m])",
          "legendFormat": "5xx"
        }
      ]
    },
    {
      "type": "graph",
      "title": "Request Latency (p95)",
      "targets": [
        {
          "expr": "histogram_quantile(0.95, sum(rate(http_server_requests_seconds_bucket{application=\"orders-service\"}[5m])) by (le))",
          "legendFormat": "p95"
        }
      ]
    }
  ]
}